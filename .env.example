# MongoDB Configuration
MONGO_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_NAME=terpnotes
MONGO_FILECOLLECTION=files
MONGO_USERCOLLECTION=users

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Admin Contact Email (for support form)
ADMIN_EMAIL=admin@yourdomain.com

# Session Secret (generate a random string)
SECRET_KEY=generate-a-random-secret-key-here

# VirusTotal API (Optional - for file scanning)
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Vercel Cron Secret (Optional - for background jobs)
CRON_SECRET=generate-a-random-cron-secret

# Node Environment
NODE_ENV=production

# Resend Api
RESEND_API_KEY=your_api_key
