<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Terp Notes Mobile</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #F8FAFC, #E2E8F0);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .mobile-register-container {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            width: 90%;
            max-width: 400px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .mobile-register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .mobile-register-header img {
            width: 48px;
            height: 48px;
            margin-bottom: 1rem;
        }

        .mobile-register-header h1 {
            color: #1F2937;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .mobile-register-header p {
            color: #6B7280;
            font-size: 0.9rem;
            margin: 0.5rem 0 0 0;
        }

        .mobile-form-group {
            margin-bottom: 1.5rem;
        }

        .mobile-form-label {
            display: block;
            color: #374151;
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .mobile-form-input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #E5E7EB;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.2s ease;
            box-sizing: border-box;
        }

        .mobile-form-input:focus {
            outline: none;
            border-color: #DC2626;
        }

        .mobile-register-btn {
            width: 100%;
            background: #DC2626;
            color: white;
            border: none;
            padding: 0.875rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s ease;
        }

        .mobile-register-btn:hover {
            background: #B91C1C;
        }

        .mobile-register-btn:disabled {
            background: #9CA3AF;
            cursor: not-allowed;
        }

        .mobile-register-links {
            text-align: center;
            margin-top: 1.5rem;
        }

        .mobile-register-links a {
            color: #DC2626;
            text-decoration: none;
            font-size: 0.9rem;
            margin: 0 0.5rem;
        }

        .mobile-register-links a:hover {
            text-decoration: underline;
        }

        .mobile-desktop-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid #E5E7EB;
        }

        .mobile-desktop-link a {
            color: #6B7280;
            text-decoration: none;
            font-size: 0.8rem;
        }

        .mobile-desktop-link a:hover {
            color: #DC2626;
        }

        .mobile-notification {
            padding: 0.75rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            display: none;
        }

        .mobile-notification.success {
            background: #D1FAE5;
            color: #065F46;
            border: 1px solid #A7F3D0;
        }

        .mobile-notification.error {
            background: #FEE2E2;
            color: #991B1B;
            border: 1px solid #FECACA;
        }

        .mobile-checkbox-group {
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .mobile-checkbox {
            width: 20px;
            height: 20px;
            margin-top: 0.125rem;
        }

        .mobile-checkbox-label {
            font-size: 0.9rem;
            color: #374151;
            line-height: 1.4;
        }

        .mobile-checkbox-label a {
            color: #DC2626;
            text-decoration: none;
        }

        .mobile-checkbox-label a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="mobile-register-container">
        <div class="mobile-register-header">
            <img src="/logo.png" alt="Terp Notes">
            <h1>Terp Notes</h1>
            <p>Mobile Registration</p>
        </div>

        <div id="mobileNotification" class="mobile-notification"></div>

        <form id="mobileRegisterForm" novalidate>
            <div class="mobile-form-group">
                <label for="mobileFirstname" class="mobile-form-label">First Name</label>
                <input type="text" id="mobileFirstname" name="firstname" class="mobile-form-input" required>
            </div>

            <div class="mobile-form-group">
                <label for="mobileLastname" class="mobile-form-label">Last Name</label>
                <input type="text" id="mobileLastname" name="lastname" class="mobile-form-input" required>
            </div>

            <div class="mobile-form-group">
                <label for="mobileEmail" class="mobile-form-label">Email</label>
                <input type="email" id="mobileEmail" name="email" class="mobile-form-input" required>
            </div>

            <div class="mobile-form-group">
                <label for="mobilePassword" class="mobile-form-label">Password</label>
                <input type="password" id="mobilePassword" name="password" class="mobile-form-input" required>
            </div>

            <div class="mobile-checkbox-group">
                <input type="checkbox" id="mobileTerms" name="terms" class="mobile-checkbox" required>
                <label for="mobileTerms" class="mobile-checkbox-label">
                    I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>
                </label>
            </div>

            <button type="submit" class="mobile-register-btn" id="mobileRegisterBtn">
                Create Account
            </button>
        </form>

        <div class="mobile-register-links">
            <a href="/mobile/login">Already have an account? Login</a>
        </div>

        <div class="mobile-desktop-link">
            <a href="/">Use Desktop Version</a>
        </div>
    </div>

    <script>
        document.getElementById('mobileRegisterForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const firstname = document.getElementById('mobileFirstname').value;
            const lastname = document.getElementById('mobileLastname').value;
            const email = document.getElementById('mobileEmail').value;
            const password = document.getElementById('mobilePassword').value;
            const terms = document.getElementById('mobileTerms').checked;
            const registerBtn = document.getElementById('mobileRegisterBtn');
            const notification = document.getElementById('mobileNotification');

            if (!firstname || !lastname || !email || !password || !terms) {
                showNotification('Please fill in all fields and accept the terms', 'error');
                return;
            }

            registerBtn.disabled = true;
            registerBtn.textContent = 'Creating Account...';

            try {
                const response = await fetch('/registerSubmit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ firstname, lastname, email, password, terms })
                });

                if (response.ok) {
                    showNotification('Account created! Please check your email to verify your account.', 'success');
                    setTimeout(() => {
                        window.location.href = '/mobile/login';
                    }, 2000);
                } else {
                    const data = await response.json();
                    showNotification(data.error || 'Registration failed', 'error');
                }
            } catch (error) {
                showNotification('Network error. Please try again.', 'error');
            } finally {
                registerBtn.disabled = false;
                registerBtn.textContent = 'Create Account';
            }
        });

        function showNotification(message, type) {
            const notification = document.getElementById('mobileNotification');
            notification.textContent = message;
            notification.className = `mobile-notification ${type}`;
            notification.style.display = 'block';

            setTimeout(() => {
                notification.style.display = 'none';
            }, 5000);
        }
    </script>
</body>
</html>
