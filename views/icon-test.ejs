            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 2rem;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }
        .icon-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1.5rem;
            background: white;
            border: 2px solid #E5E7EB;
            border-radius: 12px;
            transition: all 0.2s;
        }
        .icon-item:hover {
            border-color: #E21833;
            box-shadow: 0 4px 12px rgba(226, 24, 51, 0.15);
            transform: translateY(-4px);
        }
        .icon-display {
            width: 64px;
            height: 64px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            background: #F9FAFB;
            border-radius: 8px;
            padding: 0.5rem;
        }
        .icon-display img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        .icon-name {
            font-size: 0.875rem;
            font-weight: 600;
            color: #1F2937;
            text-align: center;
            word-break: break-word;
        }
        .icon-size {
            font-size: 0.75rem;
            color: #6B7280;
            margin-top: 0.5rem;
        }
        .test-header {
            text-align: center;
            padding: 3rem 2rem 1rem;
            background: linear-gradient(135deg, #E21833 0%, #B91C1C 100%);
            color: white;
        }
        .test-header h1 {
            color: white;
            margin-bottom: 0.5rem;
        }
        .status {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }
        .status.loaded {
            background: #D1FAE5;
            color: #065F46;
